@{
    Layout = null;

    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

    string IsActive(string controller, string action)
    {
        return (currentController == controller && currentAction == action)
            ? "bg-warning bg-opacity-25 text-warning fw-semibold"
            : "text-secondary";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MadeHuman_User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #d6d3d1;
            border-radius: 3px;
        }
    </style>
</head>
<body class="bg-light min-vh-100 d-flex flex-column text-dark">

    <!-- Top bar -->
    <header class="d-flex align-items-center justify-content-between bg-white px-4 py-3 shadow-sm">
        <div class="d-flex align-items-center gap-3">
            <img src="https://storage.googleapis.com/a1aa/image/77806709-391a-489f-73cd-6465f3e28dfb.jpg"
                 alt="Profile picture"
                 class="rounded-circle shadow" style="width: 56px; height: 56px; object-fit: cover;" />
            <span class="fs-5 fw-bold">Nguyễn Văn A</span>
        </div>
        <div>
            <button class="btn border-0 text-warning fs-4 position-relative">
                <i class="fas fa-bell"></i>
            </button>
        </div>
    </header>

    <!-- Layout -->
    <main class="d-flex flex-grow-1 p-4 gap-4">
        <!-- Sidebar -->
        <aside class="d-flex flex-column justify-content-between bg-white rounded p-4 shadow" style="width: 260px;">
            <nav class="d-flex flex-column gap-3 fs-6 fw-medium">
                <a class="d-flex align-items-center gap-2 px-3 py-2 rounded text-decoration-none @IsActive("Home", "Index")"
                   asp-controller="Home" asp-action="Index">
                    <i class="fas fa-th-large"></i> <span>Dashboard</span>
                </a>

                <!-- InBound -->
                <div class="position-relative">
                    <button type="button" onclick="toggleDropdown('inboundDropdown')"
                            class="btn w-100 text-start d-flex align-items-center justify-content-between text-secondary bg-light">
                        <span><i class="fas fa-download me-2"></i> InBound</span>
                        <i class="fas fa-chevron-down small text-muted"></i>
                    </button>
                    <div id="inboundDropdown" class="collapse ps-3 pt-2 d-flex flex-column gap-1 small" data-dropdown-group>
                        <a asp-controller="Inbound" asp-action="Import" class="text-decoration-none px-2 py-1 rounded @IsActive("Inbound", "Import")">Import</a>
                        <a asp-controller="Inbound" asp-action="Export" class="text-decoration-none px-2 py-1 rounded @IsActive("Inbound", "Export")">Export</a>
                    </div>
                </div>

                <!-- OutBound -->
                <div class="position-relative">
                    <button type="button" onclick="toggleDropdown('outboundDropdown')"
                            class="btn w-100 text-start d-flex align-items-center justify-content-between text-secondary bg-light">
                        <span><i class="fas fa-upload me-2"></i> OutBound</span>
                        <i class="fas fa-chevron-down small text-muted"></i>
                    </button>
                    <div id="outboundDropdown" class="collapse ps-3 pt-2 d-flex flex-column gap-1 small" data-dropdown-group>
                        <a asp-controller="Outbound" asp-action="Picker" class="text-decoration-none px-2 py-1 rounded">Picker</a>

                        <!-- Checker Sub -->
                        <div class="position-relative">
                            <button type="button" onclick="toggleDropdown('checkerSubDropdown')"
                                    class="btn w-100 text-start px-2 py-1 rounded text-secondary bg-light">
                                Checker <i class="fas fa-chevron-down ms-auto small text-muted"></i>
                            </button>
                            <div id="checkerSubDropdown" class="collapse ps-3 pt-2 d-flex flex-column gap-1" data-dropdown-group>
                                <a asp-controller="Outbound" asp-action="CheckerTaskMix" class="text-decoration-none px-2 py-1 rounded">Checker Task Mix</a>
                                <a asp-controller="Outbound" asp-action="CheckerTaskSingle" class="text-decoration-none px-2 py-1 rounded">Checker Task Single</a>
                            </div>
                        </div>

                        <a asp-controller="Outbound" asp-action="Packer" class="text-decoration-none px-2 py-1 rounded">Packer</a>
                        <a asp-controller="Outbound" asp-action="Dispatch" class="text-decoration-none px-2 py-1 rounded">Dispatch</a>
                    </div>
                </div>

                <a class="d-flex align-items-center gap-2 px-3 py-2 rounded text-decoration-none text-secondary bg-light"
                   asp-controller="Training" asp-action="Index">
                    <i class="fas fa-tv"></i> <span>Training</span>
                </a>

                <a class="d-flex align-items-center gap-2 px-3 py-2 rounded text-decoration-none text-secondary bg-light"
                   asp-controller="Attendance" asp-action="CheckInOut">
                    <i class="fas fa-hourglass-half"></i> <span>Check In/Out</span>
                </a>

                <a class="d-flex align-items-center gap-2 px-3 py-2 rounded text-decoration-none text-secondary bg-light"
                   asp-controller="Report" asp-action="Index">
                    <i class="fas fa-comment-alt"></i> <span>Reports</span>
                </a>

                <!-- Manager -->
                <div class="position-relative">
                    <button type="button" onclick="toggleDropdown('managerDropdown')"
                            class="btn w-100 text-start d-flex align-items-center justify-content-between text-secondary bg-light">
                        <span><i class="fas fa-building me-2"></i> Manager</span>
                        <i class="fas fa-chevron-down small text-muted"></i>
                    </button>
                    <div id="managerDropdown" class="collapse ps-3 pt-2 d-flex flex-column gap-1 small" data-dropdown-group>
                        <a asp-controller="Staff" asp-action="ZoneManagement" class="text-decoration-none px-2 py-1 rounded">Zone Management</a>
                        <a asp-controller="Staff" asp-action="OrderManagement" class="text-decoration-none px-2 py-1 rounded">Order Management</a>
                        <a asp-controller="Staff" asp-action="SetPartTimeID" class="text-decoration-none px-2 py-1 rounded">Set Part-Time ID</a>
                        <a asp-controller="Staff" asp-action="AccountAndPermission" class="text-decoration-none px-2 py-1 rounded">Account and Permission</a>
                    </div>
                </div>

                <a class="d-flex align-items-center gap-2 px-3 py-2 rounded text-muted text-decoration-none"
                   asp-controller="Support" asp-action="Help">
                    <i class="fas fa-question"></i> <span>Help</span>
                </a>
            </nav>

            <div class="text-center pt-4 border-top mt-4">
                <p class="small fw-bold mb-0">MADEHUMAN</p>
                <p class="text-muted small">Version: 1.0.0</p>
            </div>
        </aside>

        <!-- Main content -->
        <section class="flex-grow-1 bg-white rounded p-5 shadow overflow-auto">
            <h1 class="fs-2 fw-bold mb-4">@ViewData["Title"]</h1>
            @RenderBody()
        </section>
    </main>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleDropdown(id) {
            const el = document.getElementById(id);
            el.classList.toggle('collapse');
        }

        window.addEventListener('click', function (e) {
            if (!e.target.closest('button') && !e.target.closest('[data-dropdown-group]')) {
                document.querySelectorAll('[data-dropdown-group]').forEach(el => el.classList.add('collapse'));
            }
        });
    </script>
</body>
</html>
