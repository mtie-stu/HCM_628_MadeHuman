@model MadeHuman_Admin.Models.SetPartTimeRoleViewModel
@{
    ViewData["Title"] = "Set Part-Time Role";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-white text-dark">

    <div class="container py-5">
        <form asp-action="SetId" method="post" class="bg-light rounded p-4 row g-3 align-items-end">
            <div class="col-md-5">
                <label asp-for="PartTimeId" class="form-label fw-semibold">Part-Time ID</label>
                <input asp-for="PartTimeId" class="form-control text-muted text-sm border border-1 border-secondary-subtle" placeholder="Enter Part-Time ID" />
            </div>
            <div class="col-md-5">
                <label asp-for="Role" class="form-label fw-semibold">Role</label>
                <div class="input-group">
                    <select asp-for="Role" class="form-select text-sm border border-1 border-secondary-subtle">
                        <option disabled selected>Select</option>
                        <option>Picker</option>
                        <option>Checker</option>
                        <option>Packer</option>
                        <option>Dispatch</option>
                    </select>
                    <span class="input-group-text bg-white border-start-0"><i class="fas fa-chevron-down text-warning"></i></span>
                </div>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-success fw-semibold">Submit</button>
            </div>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <section class="bg-white rounded border mt-5">
            <div class="d-flex justify-content-between align-items-center border-bottom px-3 py-2 bg-light">
                <span class="fw-semibold small">History</span>
                <i class="fas fa-chevron-up text-warning small"></i>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-sm text-sm mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th>Date</th>
                            <th>Part-Time ID</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.History.Any())
                        {
                            foreach (var entry in Model.History)
                            {
                                <tr>
                                    <td>@entry.Date.ToString("dd MMM yyyy")</td>
                                    <td>@entry.PartTimeId</td>
                                    <td>@entry.Role</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-3">No history yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>

</body>
</html>
