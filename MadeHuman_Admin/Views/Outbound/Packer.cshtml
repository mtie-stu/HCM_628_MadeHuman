@model MadeHuman_Admin.Models.Outbound.PackerViewModel
@{
    ViewData["Title"] = "Packer";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

<div class="container mt-5 bg-white p-4 rounded shadow-sm">
    <h1 class="h4 fw-bold mb-4">Mã QR trên Bill</h1>

    <!-- QR input -->
    <div class="input-group mb-4">
        <input type="text" class="form-control" placeholder="Quét mã QR" value="BASKET123" />
        <button class="btn btn-outline-secondary" type="button">
            <i class="fas fa-qrcode fs-5"></i>
        </button>
    </div>

    <!-- List Product Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>Status</th>
                    <th>SmallTaskID (STID)</th>
                    <th>ProductItemID</th>
                    <th>ProductName</th>
                    <th>Quantity</th>
                    <th>LocationStorage</th>
                </tr>
            </thead>
            <tbody>
                <tr class="align-middle">
                    <td class="text-success">
                        <i class="fas fa-circle"></i>
                    </td>
                    <td>ST001</td>
                    <td>PI001</td>
                    <td>Sản phẩm A</td>
                    <td>10</td>
                    <td>Kệ 1</td>
                </tr>
                <tr class="align-middle">
                    <td class="text-warning">
                        <i class="fas fa-circle"></i>
                    </td>
                    <td>ST002</td>
                    <td>PI002</td>
                    <td>Sản phẩm B</td>
                    <td>5</td>
                    <td>Kệ 2</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="btn-group" role="group">
            <button class="btn btn-outline-secondary disabled">Previous</button>
            <button class="btn btn-warning text-white">1</button>
            <button class="btn btn-outline-secondary">2</button>
            <button class="btn btn-outline-primary">Next</button>
            <button class="btn btn-outline-secondary">Show all</button>
        </div>

        <button class="btn btn-warning text-white shadow px-4">
            Tiếp tục
        </button>
    </div>
</div>

