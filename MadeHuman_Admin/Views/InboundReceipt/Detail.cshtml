@model Madehuman_User.ViewModel.Inbound.InboundReceipt.InboundReceiptDetailViewModel

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Chi tiết Phiếu Nhập Kho</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã phiếu:</dt>
            <dd class="col-sm-9 fw-bold">@Model.Id</dd>

            <dt class="col-sm-3">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.CreateAt.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Ngày nhận:</dt>
            <dd class="col-sm-9">@Model.ReceivedAt.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info text-dark">@Model.Status</span>
            </dd>

            <dt class="col-sm-3">Mã nhiệm vụ:</dt>
            <dd class="col-sm-9">@Model.TaskCode</dd>
        </dl>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Danh sách sản phẩm</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 30%">Mã SKU</th>
                    <th style="width: 50%">Tên sản phẩm</th>
                    <th style="width: 20%">Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ProductSKUId</td>
                        <td>@item.ProductSKUName</td>
                        <td class="text-center fw-bold">@item.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
    </a>
</div>
