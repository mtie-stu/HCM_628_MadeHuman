@model List<Madehuman_Share.ViewModel.Inbound.InboundReceipt.InboundReceiptViewModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Danh sách Phiếu Nhập</h2>
    <a asp-controller="InboundReceipt" asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Tạo phiếu mới
    </a>
</div>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Mã</th>
            <th>Ngày tạo</th>
            <th>Ngày nhận</th>
            <th>Trạng thái</th>
            <th>Mã nhiệm vụ</th>
            <th>Số dòng</th>
            <th class="text-center" style="width: 120px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CreateAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.ReceivedAt.ToString("dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>@item.TaskCode</td>
                <td>@item.ItemCount</td>
                <td class="text-center">
                    <a asp-controller="InboundReceipt" asp-action="Detail" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i> Chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
