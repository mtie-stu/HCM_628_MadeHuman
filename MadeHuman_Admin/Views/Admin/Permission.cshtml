@model AccountFilterViewModel

@{
    ViewData["Title"] = "Account Management";
    var roles = new[] { "All", "Picker", "Checker", "Packer", "Dispatch" };
}

<div class="container py-4">
    <form asp-action="Permission" method="post" class="row g-3 align-items-end bg-white rounded p-4 shadow-sm mb-4">
            <div class="col-md-5">
                <label for="search" class="form-label">Search</label>
                <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Account Find" />
            </div>
        <div class="col-md-5">
            <label for="role" class="form-label">Role</label>
            <select class="form-select" name="RoleFilter" id="role">
                @if (string.IsNullOrEmpty(Model.RoleFilter))
                {
                    <option value="" disabled selected>Choose Role</option>
                }
                else
                {
                    <option value="" disabled>Choose Role</option>
                }

                @foreach (var role in roles)
                {
                    if (role == Model.RoleFilter)
                    {
                        <option value="@role" selected>@role</option>
                    }
                    else
                    {
                        <option value="@role">@role</option>
                    }
                }
            </select>

        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>

    <div class="bg-white rounded p-3 shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Account Management</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-sm align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>STT</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>State</th>
                        <th>Act</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Accounts.Any())
                    {
                        var index = 1;
                        foreach (var acc in Model.Accounts)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@acc.Name</td>
                                <td>@acc.Email</td>
                                <td>@acc.Role</td>
                                <td>
                                    @if (acc.State == "Activate")
                                    {
                                        <span class="badge bg-success">Activate</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Locked</span>
                                    }
                                </td>
                                <td>
                                   @*  <i class="fas fa-edit text-primary me-2" role="button" title="Edit"></i> *@

                                    <form method="post" asp-action="Permission" class="d-inline">
                                        <input type="hidden" name="actionType" value="toggle" />
                                        <input type="hidden" name="targetEmail" value="@acc.Email" />
                                        <input type="hidden" name="SearchTerm" value="@Model.SearchTerm" />
                                        <input type="hidden" name="RoleFilter" value="@Model.RoleFilter" />
                                        <button type="submit" class="btn btn-link p-0 border-0" title="Toggle Lock">
                                            @if (acc.State == "Activate")
                                            {
                                                <i class="fas fa-lock text-danger"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-lock-open text-danger"></i>
                                            }
                                        </button>
                                    </form>
                                </td>

                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">No accounts found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
