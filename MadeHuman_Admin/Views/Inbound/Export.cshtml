@model MadeHuman_Admin.Models.Inbound.ExportTaskViewModel

@{
    ViewData["Title"] = "Xuất kho";
}

<!-- THÔNG BÁO -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mb-4">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success mb-4">
        <p>@ViewBag.Success</p>
    </div>
}

<form asp-action="Export" method="post" class="container my-4 p-4 border border-primary rounded bg-white shadow">
    <div class="row g-4">
        <!-- LEFT: Quét mã task Export -->
        <div class="col-md-6">
            <h2 class="h4 mb-3 text-primary">Mã Task Export</h2>
            <div class="input-group mb-4">
                <input asp-for="ExportCode" placeholder="Nhập mã export" class="form-control" />
                <button type="submit" class="btn btn-outline-secondary" title="Tìm mã export">
                    <i class="fas fa-qrcode"></i>
                </button>
            </div>

            @if (Model?.Products != null && Model.Products.Any())
            {
                @foreach (var product in Model.Products)
                {
                    <div class="card mb-3">
                        <img src="@product.ImageUrl" class="card-img-top" alt="Ảnh sản phẩm" />
                        <div class="card-body">
                            <p class="card-text"><strong>Tên:</strong> @product.ProductName</p>
                            <p class="card-text"><strong>Mã SP:</strong> @product.ProductItemId</p>
                            <p class="card-text text-muted"><strong>Vị trí:</strong> @product.LocationStorage</p>
                            <p class="card-text text-muted"><strong>Số lượng tồn:</strong> @product.Quantity</p>
                        </div>
                    </div>
                }
            }
            else if (!string.IsNullOrEmpty(Model?.ExportCode))
            {
                <p class="text-danger mt-2">Không tìm thấy thông tin sản phẩm với mã export trên.</p>
            }
        </div>

        <!-- RIGHT: Nhập dữ liệu để xuất kho -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ScannedLocationCode" class="form-label">Mã vị trí</label>
                <div class="input-group">
                    <input asp-for="ScannedLocationCode" class="form-control" placeholder="Mã vị trí" />
                    <button type="button" class="btn btn-outline-secondary" title="Scan mã vị trí">
                        <i class="fas fa-qrcode"></i>
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ScannedProductCode" class="form-label">Mã sản phẩm</label>
                <div class="input-group">
                    <input asp-for="ScannedProductCode" class="form-control" placeholder="Mã sản phẩm" />
                    <button type="button" class="btn btn-outline-secondary" title="Scan mã sản phẩm">
                        <i class="fas fa-qrcode"></i>
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ScannedQuantity" class="form-label">Số lượng</label>
                <input asp-for="ScannedQuantity" class="form-control" placeholder="Số lượng cần xuất" />
            </div>

            <button type="submit" class="btn btn-primary mt-2">
                Xuất kho
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
}
