@model MadeHuman_Admin.Models.ImportTaskViewModel

@{
    int remaining = 0;
    bool isDisabled = false;

    if (Model.SelectedProduct != null)
    {
        remaining = Model.SelectedProduct.Quantity - Model.SelectedProduct.ImportedQuantity;
        isDisabled = remaining <= 0;
    }
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <form asp-action="Import" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.Success
                </div>
            }

            <div class="row g-4">
                <!-- Mã nhiệm vụ nhập hàng -->
                <div class="col-md-6">
                    <label for="TaskCode" class="form-label">Mã nhiệm vụ nhập hàng</label>
                    <div class="input-group">
                        <input asp-for="TaskCode" class="form-control" placeholder="Nhập mã nhiệm vụ..." />
                        <button class="btn btn-outline-dark" type="submit" title="Quét mã nhiệm vụ">
                            <i class="fas fa-qrcode"></i>
                        </button>
                    </div>

                    @if (Model?.SelectedProduct != null)
                    {
                        <div class="mt-4 border rounded p-3" style="max-width: 300px;">
                            <img src="@Model.SelectedProduct.ImageUrl" class="img-fluid rounded mb-2" alt="Ảnh sản phẩm" />
                            <p class="small text-muted mb-1">@Model.SelectedProduct.ProductName</p>
                            <p class="small fw-semibold text-dark mb-1">@Model.SelectedProduct.ProductItemId</p>
                            <p class="small text-muted mb-1">Số lượng yêu cầu: @Model.SelectedProduct.Quantity</p>
                            <p class="small text-muted">Vị trí lưu: @Model.SelectedProduct.LocationStorage</p>
                        </div>
                    }
                </div>

                <!-- Mã sản phẩm + số lượng -->
                <div class="col-md-6">
                    <label for="ScannedProductCode" class="form-label">Mã sản phẩm</label>
                    <div class="input-group mb-4">
                        <input asp-for="ScannedProductCode" class="form-control" placeholder="Nhập hoặc quét mã sản phẩm..." autofocus />
                        <button class="btn btn-outline-dark" type="submit" title="Quét mã sản phẩm">
                            <i class="fas fa-qrcode"></i>
                        </button>
                    </div>

                    @if (Model.SelectedProduct != null)
                    {
                        <p class="small text-muted mb-1">
                            Đã nhập: <span class="text-success">@Model.SelectedProduct.ImportedQuantity</span> /
                            @Model.SelectedProduct.Quantity
                        </p>
                        <div class="progress mb-3" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar"
                                 style="@($"width: {(Model.SelectedProduct.ImportedQuantity * 100 / Model.SelectedProduct.Quantity)}%")">
                            </div>
                        </div>

                        <label for="ScannedQuantity" class="form-label">Số lượng nhập kho</label>
                        @if (isDisabled)
                        {
                            <input asp-for="ScannedQuantity" class="form-control" placeholder="Số lượng nhập..." disabled />
                        }
                        else
                        {
                            <input asp-for="ScannedQuantity" class="form-control" placeholder="Số lượng nhập..." />
                        }

                    }
                </div>

                <!-- Nút xác nhận -->
                <div class="col-12">
                    <button type="submit" class="btn btn-dark mt-2">Xác nhận nhập kho</button>
                </div>
            </div>
        </form>
    </div>
</div>
