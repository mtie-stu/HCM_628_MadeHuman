@model Madehuman_Share.ViewModel.Shop.ProductDetailViewModel

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin chi tiết sản phẩm</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Tên sản phẩm:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Mô tả:</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Giá:</dt>
                <dd class="col-sm-8">@Model.Price.ToString("N0") ₫</dd>

                <dt class="col-sm-4">Mã SKU chính:</dt>
                <dd class="col-sm-8">@Model.SKU</dd>

                <dt class="col-sm-4">Danh mục:</dt>
                <dd class="col-sm-8">@Model.CategoryName</dd>
            </dl>

            @if (Model.ProductItems != null && Model.ProductItems.Any())
            {
                <hr />
                <h5 class="mt-3">Danh sách biến thể (ProductItems):</h5>
                <table class="table table-sm table-bordered mt-2">
                    <thead class="table-light">
                        <tr>
                            <th>SKU</th>
                            <th>Số lượng tồn kho</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductItems)
                        {
                            <tr>
                                <td>@item.SKU</td>
                                <td>@item.QuantityInStock</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted mt-3">Chưa có biến thể sản phẩm.</p>
            }
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>
