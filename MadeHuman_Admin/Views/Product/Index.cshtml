@model List<Madehuman_Share.ViewModel.Shop.ProductListItemViewModel>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2 class="mb-4">Danh sách sản phẩm</h2>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>SKU</th>
            <th>Danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("N0") ₫</td>
                    <td>@item.SKU</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Xoá</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Không có sản phẩm nào.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Tạo sản phẩm mới</a>
