@model Madehuman_User.ViewModel.WareHouse.WareHouseViewModel

@{
    
}

<h2>@ViewData["Title"] Thêm kho mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Tên kho</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location">Địa chỉ</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastUpdated">Chỉnh sửa lần cuối</label>
        <input asp-for="LastUpdated" class="form-control" type="number" />
        <span asp-validation-for="LastUpdated" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-success">💾 Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
