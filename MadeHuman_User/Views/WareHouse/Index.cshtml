@model List<Madehuman_User.ViewModel.WareHouse.WareHouseViewModel>

@{
    ViewData["Title"] = "Danh sách kho";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Thêm kho mới</a>
</p>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Tên kho</th>
            <th>Địa chỉ</th>
            <th>Chỉnh sửa lần cuối</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.LastUpdated</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">👁️ Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
