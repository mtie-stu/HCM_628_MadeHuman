@model List<Madehuman_Share.ViewModel.Shop.ComboListItemViewModel>

@{
    ViewBag.Title = "Danh sách Combo";
}
<style>
        .table th, .table td {
        vertical-align: middle !important;
    }

    .table td.text-muted {
        font-size: 0.9rem;
    }

    .btn-outline-primary {
        min-width: 100px;
    }

</style>
<h2 class="mb-4 text-primary">Danh sách Combo</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-warning shadow-sm">Chưa có combo nào.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-light text-center">
                <tr>
                    <th>Tên Combo</th>
                    <th>Mô tả</th>
                    <th>Giá</th>
                    <th>SKU</th>
                    <th>Số SP</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var combo in Model)
                {
                    <tr>
                        <td class="fw-semibold">@combo.Name</td>
                        <td>@combo.Description</td>
                        <td class="text-end text-success">@combo.Price.ToString("N0") ₫</td>
                        <td class="text-muted">@combo.SKU</td>
                        <td class="text-center">@combo.ComboItems.Count</td>
                        <td class="text-center">
                            <a asp-action="Detail" asp-route-id="@combo.ComboId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
