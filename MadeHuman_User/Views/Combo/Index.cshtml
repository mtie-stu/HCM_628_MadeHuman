@model List<Madehuman_User.ViewModel.Shop.ComboListItemViewModel>

@{
    ViewData["Title"] = "Danh sách Combo";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Combo/combo-index.css" asp-append-version="true" />

<div class="combo-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-ui-checks-grid"></i> Danh sách Combo</h2>
            <div class="page-subtext">Tổng hợp gói sản phẩm (combo) và chi tiết</div>
        </div>
        <div class="toolbar">
            <a asp-action="CreateCombo" class="btn btn-orange">
                <i class="bi bi-plus-circle"></i> Tạo combo mới
            </a>
        </div>
    </div>

    <!-- Thông báo -->
    @if (TempData["Success"] != null)
    {
        <div class="inline-alert show success">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="inline-alert show error">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        </div>
    }

    <!-- Bảng -->
    <div class="table-wrap">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width: 24%;">Tên Combo</th>
                    <th>Mô tả</th>
                    <th style="width: 140px;">Giá</th>
                    <th style="width: 200px;">SKU</th>
                    <th style="width: 120px;" class="text-center">Số SP</th>
                    <th style="width: 170px; text-align:right;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="6">
                            <div class="empty-state">
                                <i class="bi bi-inboxes"></i>
                                <div class="title">Chưa có combo nào</div>
                                <div class="desc">Hãy tạo combo đầu tiên của bạn.</div>
                                <a asp-action="Create" class="btn btn-orange">
                                    <i class="bi bi-plus-circle"></i> Tạo combo mới
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var combo in Model)
                    {
                        <tr>
                            <td class="fw-semibold text-break">@combo.Name</td>
                            <td class="text-break">@combo.Description</td>
                            <td class="price">@combo.Price.ToString("N0") ₫</td>
                            <td><span class="id-chip">@combo.SKU</span></td>
                            <td class="text-center fw-bold">@combo.ComboItems.Count</td>
                            <td class="text-end">
                                <div class="action-group">
                                    <a asp-action="Detail" asp-route-id="@combo.ComboId" class="btn btn-sm btn-outline">
                                        <i class="bi bi-eye"></i> Chi tiết
                                    </a>
                                   @*  <a asp-action="Edit" asp-route-id="@combo.ComboId" class="btn btn-sm btn-outline">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a> *@
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
