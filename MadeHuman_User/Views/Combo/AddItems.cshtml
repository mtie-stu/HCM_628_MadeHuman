@using Madehuman_Share.ViewModel.Shop
@model AddComboItemsRequest

@{
    ViewData["Title"] = "Thêm sản phẩm vào combo";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Combo/combo-additems.css" asp-append-version="true" />

<div class="combo-page container mt-4">

    <!-- Header -->
    <div class="page-head mb-3">
        <div>
            <h2 class="page-title"><i class="bi bi-plus-square-dotted"></i> Thêm sản phẩm vào combo</h2>
            <div class="page-subtext">Chọn sản phẩm và nhập số lượng</div>
        </div>
    </div>

    <div class="form-card">
        <form asp-action="AddItems" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ComboId" />

            <div class="table-wrap mb-3">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width:70%;">Sản phẩm</th>
                            <th style="width:30%;">Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            <tr>
                                <td>
                                    <!-- TODO: Có thể thay bằng dropdown asp-items="ViewBag.Products" -->
                                    <input asp-for="Items[@i].ProductId" class="form-control" placeholder="Nhập ProductId hoặc chọn..." />
                                    <span asp-validation-for="Items[@i].ProductId" class="text-danger small"></span>
                                </td>
                                <td>
                                    <input asp-for="Items[@i].Quantity" type="number" min="1" class="form-control" />
                                    <span asp-validation-for="Items[@i].Quantity" class="text-danger small"></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-orange">
                    <i class="bi bi-check2-circle"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-outline">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
