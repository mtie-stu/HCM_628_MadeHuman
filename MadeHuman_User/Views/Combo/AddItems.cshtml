@using Madehuman_User.ViewModel.Shop
@model AddComboItemsRequest

@{
    ViewData["Title"] = "Thêm sản phẩm vào combo";
}

<h2 class="mb-4">Thêm sản phẩm vào combo</h2>

<form asp-action="AddItems" method="post">
    <input type="hidden" asp-for="ComboId" />

    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Items[@i].ProductId" class="form-control" placeholder="ProductId" />
                    </td>
                    <td>
                        <input asp-for="Items[@i].Quantity" type="number" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
