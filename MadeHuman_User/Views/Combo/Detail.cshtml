@model Madehuman_Share.ViewModel.Shop.ComboDetailViewModel

@{
    ViewData["Title"] = "Chi tiết Combo";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Combo/combo-detail.css" asp-append-version="true" />

<div class="combo-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-ui-checks-grid"></i> Chi tiết Combo</h2>
            <div class="page-subtext">Thông tin & sản phẩm thuộc combo</div>
        </div>
        <div class="toolbar">
            <a asp-action="Index" class="btn btn-outline">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
            @* <a asp-action="Edit" asp-route-id="@Model.ComboId" class="btn btn-orange">
            <i class="bi bi-pencil-square"></i> Sửa combo
            </a> *@
        </div>
    </div>

    <!-- Thông tin tổng quát -->
    <div class="info-card">
        <div class="info-grid">
            <div class="info-row">
                <div class="label">Tên combo</div>
                <div class="value fw-semibold text-break">@Model.Name</div>
            </div>

            <div class="info-row">
                <div class="label">Mô tả</div>
                <div class="value text-break">@Model.Description</div>
            </div>

            <div class="info-row">
                <div class="label">Giá</div>
                <div class="value price">@Model.Price.ToString("N0") ₫</div>
            </div>

            <div class="info-row">
                <div class="label">SKU</div>
                <div class="value">
                    @if (!string.IsNullOrWhiteSpace(Model.SKU))
                    {
                        <span class="id-chip">@Model.SKU</span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách sản phẩm trong combo -->
    <div class="mt-3 d-flex justify-content-between align-items-center">
        <h5 class="section-title m-0"><i class="bi bi-box-seam"></i> Sản phẩm trong combo</h5>
        <a asp-action="AddItems" asp-route-comboId="@Model.ComboId" class="btn btn-outline">
            <i class="bi bi-plus-circle"></i> Thêm sản phẩm
        </a>
    </div>

    @if (Model.ComboItems == null || Model.ComboItems.Count == 0)
    {
        <div class="empty-state mt-2">
            <i class="bi bi-inboxes"></i>
            <div class="title">Combo chưa có sản phẩm</div>
            <div class="desc">Hãy thêm sản phẩm để hoàn thiện combo.</div>
            @* <a asp-action="AddItems" asp-route-comboId="@Model.ComboId" class="btn btn-orange">
        <i class="bi bi-plus-circle"></i> Thêm sản phẩm
        </a> *@
        </div>
    }
    else
    {
        <div class="table-wrap mt-2">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th style="width: 160px;" class="text-center">Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ComboItems)
                    {
                        <tr>
                            <td class="text-break">@item.ProductName</td>
                            <td class="text-center fw-bold">@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
