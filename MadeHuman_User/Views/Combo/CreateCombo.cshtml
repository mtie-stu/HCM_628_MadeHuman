@model Madehuman_User.ViewModel.Shop.CreateComboViewModel

@{
    ViewData["Title"] = "Tạo Combo";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Combo/combo-create.css" asp-append-version="true" />

<div class="combo-page container mt-4">

    <!-- Header -->
    <div class="page-head mb-3">
        <div>
            <h2 class="page-title"><i class="bi bi-plus-circle"></i> Tạo Combo mới</h2>
            <div class="page-subtext">Nhập thông tin combo và tải ảnh</div>
        </div>
        <div class="toolbar">
            <a asp-action="Index" class="btn btn-outline">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="inline-alert show success">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="inline-alert show error">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        </div>
    }

    <div class="form-card">
        <form asp-action="CreateCombo" method="post" enctype="multipart/form-data" id="createComboForm">
            @Html.AntiForgeryToken()

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" type="number" min="0" step="1000" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="ImageFiles" class="form-label fw-semibold">Ảnh Combo</label>
                    <input asp-for="ImageFiles"
                           id="imageInput"
                           type="file"
                           multiple
                           accept="image/*"
                           class="form-control" />
                    <span asp-validation-for="ImageFiles" class="text-danger small"></span>

                    <div class="preview-wrap mt-3" id="imagePreviewContainer"></div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-orange">
                    <i class="bi bi-check2-circle"></i> Tạo Combo
                </button>
                <a asp-action="Index" class="btn btn-outline">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const input = document.getElementById('imageInput');
            const container = document.getElementById('imagePreviewContainer');
            let dt = new DataTransfer();

            input.addEventListener('change', () => {
                // Hợp nhất file mới với danh sách hiện có
                for (const f of input.files) dt.items.add(f);
                input.files = dt.files;
                renderPreviews();
            });

            function renderPreviews() {
                container.innerHTML = '';
                const files = Array.from(input.files);

                if (files.length === 0) {
                    container.innerHTML = '<div class="empty-thumb"><i class="bi bi-image"></i> Chưa chọn ảnh</div>';
                    return;
                }

                files.forEach((file, idx) => {
                    const url = URL.createObjectURL(file);

                    const card = document.createElement('div');
                    card.className = 'preview-card';

                    const img = document.createElement('img');
                    img.src = url;
                    img.alt = file.name;
                    img.onload = () => URL.revokeObjectURL(url);

                    const meta = document.createElement('div');
                    meta.className = 'meta';
                    meta.textContent = file.name;

                    const del = document.createElement('button');
                    del.type = 'button';
                    del.className = 'btn-remove';
                    del.innerHTML = '<i class="bi bi-x-lg"></i>';
                    del.addEventListener('click', () => removeAt(idx));

                    card.appendChild(img);
                    card.appendChild(meta);
                    card.appendChild(del);
                    container.appendChild(card);
                });
            }

            function removeAt(index) {
                const newDt = new DataTransfer();
                Array.from(input.files).forEach((file, i) => { if (i !== index) newDt.items.add(file); });
                dt = newDt;
                input.files = dt.files;
                renderPreviews();
            }

            renderPreviews();
        })();
    </script>
}
