<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MadeHuman_User</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
	<link rel="stylesheet" asp-href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" asp-href="~/MadeHuman_User.styles.css" asp-append-version="true" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-light min-vh-100 d-flex flex-column font-sans text-dark">
	<!-- Top bar -->
	<header class="d-flex align-items-center justify-content-between bg-white px-4 py-3 shadow-sm">
		<div class="d-flex align-items-center gap-3">
			<img src="https://storage.googleapis.com/a1aa/image/77806709-391a-489f-73cd-6465f3e28dfb.jpg"
				 alt="Profile picture"
				 class="rounded-circle shadow" style="width: 56px; height: 56px; object-fit: cover;" />
			<span class="fs-5 fw-bold">Nguyễn Văn A</span>
		</div>
		<div>
			<button aria-label="Notifications" class="position-relative text-warning fs-4 border-0 bg-transparent">
				<i class="fas fa-bell"></i>
			</button>
		</div>
	</header>

	<!-- Layout -->
	<main class="d-flex flex-grow-1 px-4 py-3 gap-4">
		<!-- Sidebar -->
		<aside class="d-flex flex-column justify-content-between bg-white rounded w-100" style="max-width: 260px; padding: 2rem 1.5rem; box-shadow: 0 0 10px rgba(0,0,0,0.05);">
			<nav class="d-flex flex-column gap-3 fs-6 fw-medium">
				<!-- InBound Dropdown -->
				<div class="position-relative">
					<button type="button" class="d-flex align-items-center gap-2 px-3 py-2 w-100 rounded border-0 bg-light text-secondary">
						<i class="fas fa-download"></i> <span>InBound</span>
						<i class="fas fa-chevron-down ms-auto text-muted small"></i>
					</button>
				</div>

				<!-- OutBound Dropdown -->
				<div class="position-relative">
					<button type="button" class="d-flex align-items-center gap-2 px-3 py-2 w-100 rounded border-0 bg-light text-secondary">
						<i class="fas fa-upload"></i> <span>OutBound</span>
						<i class="fas fa-chevron-down ms-auto text-muted small"></i>
					</button>

					<div class="ps-3 mt-2 d-flex flex-column gap-2 small">
						<a asp-controller="Outbound" asp-action="Picker" class="text-decoration-none text-secondary"> <i class="fas fa-hand-pointer"></i> Picker </a>

						<div class="position-relative">
							<button type="button" class="d-flex align-items-center w-100 gap-2 px-2 py-1 rounded border-0 bg-light text-secondary">
								<i class="fas fa-clipboard-check"></i> Checker
								<i class="fas fa-chevron-down ms-auto text-muted small"></i>
							</button>
							<div class="ps-3 mt-1 d-flex flex-column gap-1">
								<a asp-controller="Outbound" asp-action="CheckerTaskMix" class="text-decoration-none text-secondary small">
									<i class="fas fa-tasks"></i> Checker Task Mix
								</a>
								<a asp-controller="Outbound" asp-action="CheckerTaskSingle" class="text-decoration-none text-secondary small">
									<i class="fas fa-check-circle"></i> Checker Task Single
								</a>
							</div>
						</div>

						<a asp-controller="Outbound" asp-action="Packer" class="text-decoration-none text-secondary"> <i class="fas fa-box-open"></i> Packer </a>
						<a asp-controller="Outbound" asp-action="Dispatch" class="text-decoration-none text-secondary"> <i class="fas fa-truck"></i> Dispatch </a>
					</div>
				</div>

				<a asp-controller="Training" asp-action="Index" class="d-flex align-items-center gap-2 px-3 py-2 rounded text-secondary text-decoration-none bg-light">
					<i class="fas fa-tv"></i> <span>Training</span>
				</a>

				<a asp-controller="Attendance" asp-action="CheckInOut" class="d-flex align-items-center gap-2 px-3 py-2 rounded text-secondary text-decoration-none bg-light">
					<i class="fas fa-hourglass-half"></i> <span>Check In/Out</span>
				</a>

				<a asp-controller="Report" asp-action="Index" class="d-flex align-items-center gap-2 px-3 py-2 rounded text-secondary text-decoration-none bg-light">
					<i class="fas fa-comment-alt"></i> <span>Reports</span>
				</a>

				<a asp-controller="Support" asp-action="Help" class="d-flex align-items-center gap-2 px-3 py-2 rounded text-muted text-decoration-none bg-light">
					<i class="fas fa-question"></i> <span>Help</span>
				</a>
			</nav>

			<div class="bg-white rounded text-center py-3 mt-4 border-top">
				<p class="small fw-bold text-dark mb-0">MADEHUMAN</p>
				<p class="text-muted small mt-1">Version: 1.0.0</p>
			</div>
		</aside>

		@RenderBody()
	</main>

	<footer class="border-top text-center text-muted py-3">
		<div class="container">
			&copy; 2025 - MadeHuman_User - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script asp-src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
	<script asp-src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
