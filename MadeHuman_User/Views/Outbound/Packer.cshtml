@model MadeHuman_User.Models.PackingViewModel
@{
    ViewData["Title"] = "Packer";
}

<div class="max-w-7xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4">Mã QR trên Bill</h1>

    <!-- QR input -->
    <div class="flex items-center gap-2 mb-6">
        <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg" placeholder="Quét mã QR" value="BASKET123" />
        <button class="text-2xl text-gray-600 hover:text-blue-600">
            <i class="fas fa-qrcode"></i>
        </button>
    </div>

    <!-- List Product Table -->
    <div class="overflow-x-auto">
        <table class="min-w-full border-collapse border border-gray-300 text-sm">
            <thead class="bg-gray-100">
                <tr>
                    <th class="border border-gray-300 px-4 py-2 text-left">Status</th>
                    <th class="border border-gray-300 px-4 py-2 text-left">SmallTaskID (STID)</th>
                    <th class="border border-gray-300 px-4 py-2 text-left">ProductItemID</th>
                    <th class="border border-gray-300 px-4 py-2 text-left">ProductName</th>
                    <th class="border border-gray-300 px-4 py-2 text-left">Quantity</th>
                    <th class="border border-gray-300 px-4 py-2 text-left">LocationStorage</th>
                </tr>
            </thead>
            <tbody>
                <tr class="hover:bg-gray-50">
                    <td class="border border-gray-300 px-4 py-2 text-green-600">
                        <i class="fas fa-circle"></i>
                    </td>
                    <td class="border border-gray-300 px-4 py-2">ST001</td>
                    <td class="border border-gray-300 px-4 py-2">PI001</td>
                    <td class="border border-gray-300 px-4 py-2">Sản phẩm A</td>
                    <td class="border border-gray-300 px-4 py-2">10</td>
                    <td class="border border-gray-300 px-4 py-2">Kệ 1</td>
                </tr>
                <tr class="hover:bg-gray-50">
                    <td class="border border-gray-300 px-4 py-2 text-yellow-600">
                        <i class="fas fa-circle"></i>
                    </td>
                    <td class="border border-gray-300 px-4 py-2">ST002</td>
                    <td class="border border-gray-300 px-4 py-2">PI002</td>
                    <td class="border border-gray-300 px-4 py-2">Sản phẩm B</td>
                    <td class="border border-gray-300 px-4 py-2">5</td>
                    <td class="border border-gray-300 px-4 py-2">Kệ 2</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="flex justify-between items-center mt-6">
        <div class="flex gap-1">
            <button class="px-3 py-1 text-gray-400 cursor-not-allowed">Previous</button>
            <button class="px-3 py-1 bg-orange-400 text-white rounded">1</button>
            <button class="px-3 py-1 text-gray-600 hover:underline">2</button>
            <button class="px-3 py-1 text-blue-500 hover:underline">Next</button>
            <button class="px-3 py-1 text-gray-500 hover:underline">Show all</button>
        </div>

        <button class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-lg shadow-sm">
            Tiếp tục
        </button>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
}
