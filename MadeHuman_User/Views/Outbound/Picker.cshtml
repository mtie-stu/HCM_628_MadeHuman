@model MadeHuman_User.Models.PickerViewModel

@{
    ViewData["Title"] = "Picker";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="mb-4">
        <h1 class="h3 fw-bold text-dark">
            Task ID <span class="badge bg-secondary">@Model.TaskId</span>
        </h1>
    </div>

    <div class="row g-4">
        <!-- LEFT -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label fw-semibold">ProductItem</label>
                <div class="input-group">
                    <input asp-for="ProductItem" class="form-control" placeholder="ProductItem..." />
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-qrcode"></i>
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">LocationStorage</label>
                <div class="input-group">
                    <input asp-for="LocationStorage" class="form-control" placeholder="LocationStorage..." />
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-qrcode"></i>
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Baskets</label>
                <div class="input-group">
                    <input asp-for="Baskets" class="form-control" placeholder="Baskets..." />
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-qrcode"></i>
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Quantity</label>
                <div class="input-group">
                    <input asp-for="Quantity" class="form-control" placeholder="Quantity..." />
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-qrcode"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- RIGHT -->
        <div class="col-md-6">
            <div class="border rounded bg-light p-3 text-center">
                <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded mb-3" style="max-width: 200px; height: auto;" />
                <p class="fw-semibold">Product</p>
                <p class="fw-bold">@Model.ProductItem</p>
                <p class="text-muted">Quantity: @Model.Quantity</p>
                <p class="text-muted">Location: @Model.LocationStorage</p>
                <div class="text-success fs-2">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="btn-group">
            <button class="btn btn-warning text-white">1</button>
            <button class="btn btn-outline-secondary">2</button>
            <button class="btn btn-outline-secondary" disabled>...</button>
            <button class="btn btn-outline-secondary">5</button>
            <button class="btn btn-primary">Next</button>
        </div>
        <button class="btn btn-warning text-white px-4 shadow">Check</button>
    </div>
</div>

