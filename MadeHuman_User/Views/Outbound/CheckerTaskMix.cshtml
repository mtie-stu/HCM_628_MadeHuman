@model MadeHuman_User.Models.CheckerTaskMixViewModel

@{
    ViewData["Title"] = "Checker Task Mix";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h1 class="h4 fw-bold mb-4">Checker Task Mix</h1>

    <!-- Task Info -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Task ID:</strong> @Model.TaskId</li>
                <li class="list-group-item"><strong>Product Item:</strong> @Model.ProductItem</li>
                <li class="list-group-item"><strong>Location Storage:</strong> @Model.LocationStorage</li>
                <li class="list-group-item"><strong>Baskets:</strong> @Model.Baskets</li>
                <li class="list-group-item"><strong>Quantity:</strong> @Model.Quantity</li>
            </ul>
        </div>
        <div class="col-md-6 text-center">
            <img src="@Model.ImageUrl" alt="Product Image"
                 class="img-fluid rounded border shadow-sm" style="max-height: 200px;" />
        </div>
    </div>

    <!-- Task Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Status</th>
                    <th>Small Task ID</th>
                    <th>Product Item ID</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Location Storage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.ProductTasks)
                {
                    <tr>
                        <td>
                            @if (task.Status == "Done")
                            {
                                <span class="badge bg-success">✔ Done</span>
                            }
                            else if (task.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">⏳ Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@task.Status</span>
                            }
                        </td>
                        <td>@task.SmallTaskID</td>
                        <td>@task.ProductItemID</td>
                        <td>@task.ProductName</td>
                        <td>@task.Quantity</td>
                        <td>@task.LocationStorage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

