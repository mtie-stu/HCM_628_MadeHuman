@model MadeHuman_User.Models.CheckerTaskSingleViewModel

<div class="p-6 bg-white rounded-lg shadow">
    <h2 class="text-lg font-semibold mb-4">Checker Task Single</h2>

    <div class="grid grid-cols-2 gap-6">
        <!-- Left Side: Info -->
        <div>
            <label class="text-2xl font-bold block mb-2">Mã Task</label>
            <input type="text" class="w-full p-2 border rounded mb-4" value="@Model.TaskId" readonly />

            <div class="border rounded-lg p-4">
                <div class="w-full h-48 bg-gray-100 flex items-center justify-center mb-4">
                    <img src="@Model.ImageUrl" alt="Product Image" class="max-h-full max-w-full" />
                </div>
                <div class="font-bold">@Model.ProductName</div>
                <div class="text-sm text-gray-600">@Model.ProductItemId</div>
                <div class="text-sm text-gray-600">Số lượng: @Model.Quantity</div>
                <div class="text-sm text-gray-600">Vị trí: @Model.LocationStorage</div>

                <input type="text" class="mt-3 w-full p-2 border rounded text-sm" placeholder="Product Code" readonly value="@Model.ProductItemId" />
            </div>
        </div>

        <!-- Right Side: Input -->
        <form asp-action="CheckerTaskSingle" method="post">
            <label class="text-2xl font-bold block mb-2">Mã Sản Phẩm</label>
            <input type="text" name="InputProductCode" class="w-full p-2 border rounded mb-4" placeholder="Product Code" />

            <label class="text-2xl font-bold block mb-2">Số lượng</label>
            <input type="number" name="InputQuantity" class="w-full p-2 border rounded mb-4" placeholder="Quantity" />

            <button type="submit"
                    class="bg-orange-400 text-white px-6 py-2 rounded shadow hover:bg-orange-500 transition-all duration-200">
                In Bill
            </button>
        </form>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="mt-4 text-green-600 font-semibold">@ViewBag.Message</div>
    }
</div>
