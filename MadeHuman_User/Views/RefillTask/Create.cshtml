@using Madehuman_Share.ViewModel.Inbound
@model RefillTaskFullViewModel

@{
    ViewData["Title"] = "Tạo nhiệm vụ bổ sung kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = Context.Request.Cookies["EmailOrId"];
    Model.CreateBy = currentUser ?? "";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">📦 Tạo nhiệm vụ bổ sung kho</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Create" method="post" class="card shadow p-4">
        <div class="mb-3">
            <label class="form-label">👤 Người tạo</label>
            <input asp-for="CreateBy" class="form-control" readonly />
        </div>

        <hr />
        <h5 class="mb-3">📋 Danh sách chi tiết bổ sung</h5>

        <table class="table table-bordered align-middle" id="detailsTable">
            <thead class="table-light">
                <tr>
                    <th>SKU (text)</th>
                    <th>From Location</th>
                    <th>To Location</th>
                    <th>Số lượng</th>
                    <th class="text-center">Xoá</th>
                </tr>
            </thead>
            <tbody id="detailsBody">
                <tr>
                    <td><input name="Details[0].SKU" class="form-control" placeholder="VD: SKU123" autofocus /></td>
                    <td><input name="Details[0].FromLocation" class="form-control" placeholder="GUID từ" /></td>
                    <td><input name="Details[0].ToLocation" class="form-control" placeholder="GUID đến" /></td>
                    <td><input name="Details[0].Quantity" type="number" class="form-control" min="1" placeholder="Số lượng" /></td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeRow(this)">🗑</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <button type="button" class="btn btn-secondary mb-3" onclick="addDetail()">➕ Thêm dòng</button>

        <div>
            <button type="submit" class="btn btn-success">✅ Tạo nhiệm vụ</button>
            <a asp-action="Index" class="btn btn-outline-dark ms-2">⬅️ Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let rowIndex = 1;

        function addDetail() {
            const newRow = `
                <tr>
                    <td><input name="Details[${rowIndex}].SKU" class="form-control" placeholder="VD: SKU123" /></td>
                    <td><input name="Details[${rowIndex}].FromLocation" class="form-control" placeholder="GUID từ" /></td>
                    <td><input name="Details[${rowIndex}].ToLocation" class="form-control" placeholder="GUID đến" /></td>
                    <td><input name="Details[${rowIndex}].Quantity" type="number" min="1" class="form-control" placeholder="Số lượng" /></td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeRow(this)">🗑</button>
                    </td>
                </tr>`;
            document.getElementById('detailsBody').insertAdjacentHTML('beforeend', newRow);
            rowIndex++;
        }

        function removeRow(button) {
            const tbody = document.getElementById('detailsBody');
            if (tbody.rows.length > 1) {
                button.closest('tr').remove();
            } else {
                alert("⚠️ Phải có ít nhất 1 dòng chi tiết.");
            }
        }
    </script>
}
