@model List<Madehuman_Share.ViewModel.Inbound.RefillTaskDetailWithHeaderViewModel>

@{
    ViewData["Title"] = "Chi tiết bổ sung kho (dạng bảng)";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">
        <i class="bi bi-table"></i> Danh sách chi tiết nhiệm vụ bổ sung kho
    </h2>

    <p class="text-muted">📦 Tổng số bản ghi: <strong>@(Model?.Count ?? 0)</strong></p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Không có chi tiết nhiệm vụ nào.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th>Mã nhiệm vụ</th>
                    <th>Người tạo</th>
                    <th>Thời gian tạo</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var rowId = $"row-{item.DetailId}";
                    <tr id="@rowId">
                        <td>@item.RefillTaskId</td>
                        <td>@item.CreateBy</td>
                        <td>@item.CreateAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.FromLocation</td>
                        <td>@item.ToLocation</td>
                        <td>@item.Quantity</td>
                    </tr>
                    <tr id="form-@item.DetailId">
                        <td colspan="6">
                            <form class="row g-2 align-items-end validate-form" data-taskid="@item.RefillTaskId" data-detailid="@item.DetailId">
                                <div class="col-md-2">
                                    <label class="form-label">SKU</label>
                                    <input type="text" class="form-control sku-input" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">From</label>
                                    <input type="text" class="form-control from-input" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">To</label>
                                    <input type="text" class="form-control to-input" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Số lượng</label>
                                    <input type="number" class="form-control qty-input" />
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn btn-primary btn-submit">
                                        <i class="bi bi-check-circle"></i> Xác nhận
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-submit').click(async function () {
                const form = $(this).closest('form');
                const taskId = form.data('taskid');
                const detailId = form.data('detailid');

                const sku = form.find('.sku-input').val();
                const from = form.find('.from-input').val();
                const to = form.find('.to-input').val();
                const qty = parseInt(form.find('.qty-input').val());

                const token = getCookie("JWTToken");

                try {
                    const response = await fetch('https://localhost:7204/api/RefillTask/validate-scan', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + token
                        },
                        body: JSON.stringify({
                            refillTaskId: taskId,
                            refillTaskDetailId: detailId,
                            sku: sku,
                            fromLocationName: from,
                            toLocationName: to,
                            quantity: qty
                        })
                    });

                    const result = await response.json();

                    if (response.ok && result.some(x => x.includes("✅"))) {
                        const successMsg = result.find(x => x.startsWith("✅")) || "✅ Thành công!";
                        alert(successMsg);

                        // Highlight dòng → rồi ẩn
                        $(`#row-${detailId}`).css("background-color", "#d4edda").fadeOut(600);
                        $(`#form-${detailId}`).fadeOut(600);
                    } else {
                        alert(result.join("\n"));
                    }
                } catch (error) {
                    alert("🚨 Có lỗi xảy ra khi gửi dữ liệu.");
                    console.error(error);
                }
            });

            function getCookie(name) {
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                if (parts.length === 2) return parts.pop().split(';').shift();
                return null;
            }
        });
    </script>
}
