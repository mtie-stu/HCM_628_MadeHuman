@model Madehuman_Share.ViewModel.LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <h1>MADEHUMAN</h1>
        <h3>Welcome back!</h3>

        <form asp-action="Login" method="post">
            <input asp-for="EmailOrID" class="form-control" placeholder="Email or ID" />
            <span asp-validation-for="EmailOrID" class="text-danger"></span>

            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <span class="password-hint">Use at least 8 characters with 1 number and one special character.</span>

            <button type="submit">LOG IN</button>
        </form>
        

        <a href="#">Forgot password?</a>
        <a href="@Url.Action("Register", "Account")">Chưa có tài khoản? Đăng ký ngay</a>

    </div>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        text-align: center;
        width: 100%;
        max-width: 320px;
        margin: auto;
    }

        .login-container h1 {
            font-weight: bold;
            letter-spacing: 1px;
            margin-bottom: 40px;
        }

        .login-container h3 {
            margin-bottom: 20px;
            font-size: 16px;
        }

    form {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    input[type="text"],
    input[type="password"] {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

    input::placeholder {
        color: #999;
    }

    button[type="submit"] {
        background-color: #f7a340;
        color: white;
        border: none;
        padding: 10px;
        font-weight: bold;
        border-radius: 20px;
        cursor: pointer;
        margin-top: 10px;
        transition: background-color 0.2s;
    }

        button[type="submit"]:hover {
            background-color: #d4882e;
        }

    .text-danger {
        font-size: 12px;
        color: red;
        text-align: left;
    }

    .password-hint {
        font-size: 11px;
        color: #666;
    }

    a {
        display: block;
        margin-top: 10px;
        font-size: 11px;
        color: #888;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
