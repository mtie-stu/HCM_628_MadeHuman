@using Madehuman_Share.ViewModel.Inbound
@model List<RefillTaskFullViewModel>

@{
    ViewData["Title"] = "";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="bi bi-box-seam"></i> Danh sách nhiệm vụ bổ sung kho</h2>

    <div>
        <a class="btn btn-warning me-2" id="assignTaskBtn">
            <i class="bi bi-person-check"></i> Nhận nhiệm vụ
        </a>
    </div>
</div>


    @if (!Model.Any())
    {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> Không có nhiệm vụ nào được tạo.
            </div>
    }
    else
    {
            <div class="accordion" id="refillTaskAccordion">
            @for (int i = 0; i < Model.Count; i++)
            {
                var task = Model[i];
                        <div class="accordion-item mb-2 shadow-sm">
                            <h2 class="accordion-header" id="heading-@i">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@i" aria-expanded="false" aria-controls="collapse-@i">
                                    <i class="bi bi-clipboard-check me-2"></i>
                                    <strong>Mã: @task.Id</strong> |
                                    🕒 @task.CreateAt.ToString("dd/MM/yyyy HH:mm")
                                </button>
                            </h2>
                            <div id="collapse-@i" class="accordion-collapse collapse" aria-labelledby="heading-@i" data-bs-parent="#refillTaskAccordion">
                                <div class="accordion-body">
                                    <h6 class="mb-3"><i class="bi bi-list-ul"></i> Danh sách chi tiết</h6>

                                    <table class="table table-bordered table-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th><i class="bi bi-upc-scan"></i> SKU</th>
                                                <th><i class="bi bi-box-arrow-in-left"></i> From</th>
                                                <th><i class="bi bi-box-arrow-right"></i> To</th>
                                                <th><i class="bi bi-hash"></i> Số lượng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                    @foreach (var d in task.Details)
                                    {
                                                    <tr>
                                                        <td>@(d.SKU ?? "N/A")</td>
                                                        <td>@d.FromLocation</td>
                                                        <td>@d.ToLocation</td>
                                                        <td>@d.Quantity</td>
                                                    </tr>
                                    }
                                        </tbody>
                                    </table>

                                    <div class="mt-3 text-end">
                                        <a class="btn btn-outline-primary btn-sm" asp-controller="RefillTask" asp-action="Details" asp-route-id="@task.Id">
                                            <i class="bi bi-eye"></i> Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
            </div>
    }

</div>
@section Scripts {
        <script>
            $(document).ready(function () {
                $('#assignTaskBtn').click(function () {
                    const button = $(this);
                    button.prop('disabled', true).text('Đang xử lý...');

                    const token = getCookie("JWTToken");
                    console.log("Token:", token);


                    $.ajax({
                        url: 'https://hcm-628-madehuman-api.onrender.com/api/RefillTask/assign',
                        type: 'POST',
                        headers: {
                            Authorization: 'Bearer ' + token // 👈 Gửi token trong header
                        },
                        success: function (response) {
                            alert("✅ Đã nhận nhiệm vụ thành công!");
                            window.location.href = `https://hcm-628-madehuman-api.onrender.com/RefillTask/Details/${response.taskId}`;

                        },
                        error: function (xhr) {
                            button.prop('disabled', false).html('<i class="bi bi-person-check"></i> Nhận nhiệm vụ');
                            if (xhr.status === 401) {
                                alert("❌ Bạn chưa đăng nhập hoặc token đã hết hạn.");
                            } else if (xhr.status === 400) {
                                alert("⚠️ " + xhr.responseText);
                            } else if (xhr.status === 404) {
                                alert("🎉 Không còn nhiệm vụ nào để nhận.");
                            } else {
                                alert("🚨 Lỗi hệ thống: " + xhr.responseText);
                            }
                        }
                    });
                });

                function getCookie(name) {
                    const value = `; ${document.cookie}`;
                    const parts = value.split(`; ${name}=`);
                    if (parts.length === 2) return parts.pop().split(';').shift();
                    return null;
                }
            });
        </script>
}
