@model Madehuman_Share.ViewModel.Inbound.CreateInboundTaskViewModel

@{
    ViewData["Title"] = "Tạo nhiệm vụ nhập kho";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success d-flex justify-content-between align-items-center">
                    <span>@ViewBag.Success</span>  
                </div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Import" method="post" id="scanForm" class="row g-4">
                <!-- Nhập mã phiếu nhập -->
                <div class="col-md-6">
                    <label class="form-label">Mã phiếu nhập</label>
                    <input id="receiptIdInput" class="form-control" name="receiptId" placeholder="Nhập mã phiếu nhập (GUID)..." required />
                </div>

                <!-- Thông tin phiếu nhập -->
               <div class="col-12" id="receiptInfo" style="display:none;">
                    <div class="card mt-3 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Thông tin phiếu nhập</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Ngày tạo:</strong> <span id="createAt" class="text-muted"></span></p>
                            <p><strong>Ngày nhận:</strong> <span id="receivedAt" class="text-muted"></span></p>
                            <p><strong>Trạng thái:</strong> <span id="status" class="badge bg-info text-dark"></span></p>
                            <p><strong>Số lượng sản phẩm:</strong> <span id="itemCount" class="badge bg-secondary"></span></p>

                            <div class="mt-3">
                                <h6 class="fw-bold">Danh sách sản phẩm</h6>
                                <ul class="list-group" id="receiptItemsList" style="max-height: 300px; overflow-y: auto;"></ul>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Xác nhận -->
                <div class="col-12 text-end mt-4">
                    <button type="submit" class="btn btn-dark" id="btnSubmit" disabled>Xác nhận tạo nhiệm vụ</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let timeout;
       
        $('#receiptIdInput').on('input', function () {
            clearTimeout(timeout);
            const id = $(this).val().trim();

            // Reset UI mỗi lần nhập
            $('#receiptInfo').hide();
            $('#btnSubmit').prop('disabled', true);
            $('#receiptItemsList').empty();
            $('#receiptIdInput').prop('readonly', false);

            if (!id || id.length < 10) return;

            timeout = setTimeout(() => {
                $.get(`https://hcm-628-madehuman-api.onrender.com/api/InboundReceipt/${id}`)
                    .done(function (data) {
                        console.log("✅ Phiếu nhập tìm thấy:", data);

                        // Hiển thị thông tin cơ bản
                        $('#createAt').text(new Date(data.createAt).toLocaleString());
                        $('#receivedAt').text(data.receivedAt ? new Date(data.receivedAt).toLocaleDateString() : 'Chưa nhận');
                        $('#status')
                            .removeClass()
                            .addClass('badge')
                            .addClass(data.status === 'Received' ? 'bg-success' : 'bg-warning text-dark')
                            .text(data.status);
                        $('#itemCount').text(data.items.length);

                        // Hiển thị danh sách sản phẩm
                        data.items.forEach(item => {
                            $('#receiptItemsList').append(`
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <div><strong>SKU:</strong> ${item.productSKUId}</div>
                                        <div><strong>Tên:</strong> ${item.productSKUName}</div>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">${item.quantity}</span>
                                </li>
                            `);
                        });

                        $('#receiptInfo').fadeIn();
                        $('#receiptIdInput').prop('readonly', true);
                        $('#btnSubmit').prop('disabled', false);
                    })
                    .fail(function (xhr) {
                        console.log("❌ Không tìm thấy phiếu nhập. Lỗi:", xhr.status);
                        $('#receiptInfo').hide();
                        $('#btnSubmit').prop('disabled', true);
                    });
            }, 500);
        });

         if ('@ViewBag.Success' !== '') {
            $('html, body').animate({
                scrollTop: $('#receiptInfo').offset().top
            }, 500);
        }   

    </script>
}
