@model List<Madehuman_User.ViewModel.Shop.ProductListItemViewModel>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 8);
    var q = (string)(ViewBag.Q ?? "");
    var totalItems = (int)(ViewBag.TotalItems ?? 0);
    var fromItem = (int)(ViewBag.FromItem ?? 0);
    var toItem = (int)(ViewBag.ToItem ?? 0);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Product/product-index.css" asp-append-version="true" />

<div class="product-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-box-seam"></i> Danh sách sản phẩm</h2>
            <div class="page-subtext">Quản lý & xem chi tiết sản phẩm</div>
        </div>
        <div class="toolbar">
            <a asp-action="Create" class="btn btn-orange">
                <i class="bi bi-plus-circle"></i> Tạo sản phẩm mới
            </a>
        </div>
    </div>

    <!-- Bộ lọc + page size -->
    <form method="get" class="d-flex gap-2 align-items-end mb-3">
        <div class="with-icon" style="min-width:280px">
            <i class="bi bi-search"></i>
            <input name="q" value="@q" class="form-control" placeholder="Tìm theo tên, SKU, danh mục..." />
        </div>

        @* <div>
            <label class="form-label mb-1">Hiển thị</label>
            <select name="pageSize" class="form-select">
                @foreach (var s in new[] { 4, 8, 12, 20, 50 })
                {
                    <option value="@s" selected="@(s==pageSize)">@s / trang</option>
                }
            </select>
        </div> *@

        <button class="btn btn-outline" type="submit">
            <i class="bi bi-funnel"></i> Lọc
        </button>
    </form>

    <!-- Summary -->
    <div class="small text-muted mb-2">
        Đang hiển thị <b>@fromItem–@toItem</b> / <b>@totalItems</b> sản phẩm.
    </div>

    <!-- Thông báo (TempData) -->
    @if (TempData["Success"] != null)
    {
        <div class="inline-alert show success">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="inline-alert show error">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        </div>
    }

    <!-- Bảng -->
    <div class="table-wrap">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th style="width:140px;">Giá</th>
                    <th style="width:180px;">SKU</th>
                    <th style="width:220px;">Danh mục</th>
                    <th style="width:160px; text-align:right;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold text-break">@item.Name</td>
                            <td class="price">@item.Price.ToString("N0") ₫</td>
                            <td><span class="id-chip">@item.SKU</span></td>
                            <td class="text-truncate">@item.CategoryName</td>
                            <td class="text-end">
                                <div class="action-group">
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline">
                                        <i class="bi bi-eye"></i> Chi tiết
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">
                            <div class="empty-state">
                                <i class="bi bi-inboxes"></i>
                                <div class="title">Chưa có sản phẩm</div>
                                <div class="desc">Hãy tạo sản phẩm đầu tiên của bạn.</div>
                                <a asp-action="Create" class="btn btn-orange">
                                    <i class="bi bi-plus-circle"></i> Tạo sản phẩm mới
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        var window = 2;
        var start = Math.Max(1, currentPage - window);
        var end = Math.Min(totalPages, currentPage + window);

        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination justify-content-center flex-wrap mb-0">
                <!-- First -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = 1, pageSize, q })" aria-label="First">&laquo;&laquo;</a>
                </li>
                <!-- Prev -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, pageSize, q })" aria-label="Previous">&laquo;</a>
                </li>

                <!-- leading ... -->
                @if (start > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = 1, pageSize, q })">1</a>
                    </li>
                    @if (start > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                }

                <!-- window pages -->
                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize, q })">@i</a>
                    </li>
                }

                <!-- trailing ... -->
                @if (end < totalPages)
                {
                    @if (end < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = totalPages, pageSize, q })">@totalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, pageSize, q })" aria-label="Next">&raquo;</a>
                </li>
                <!-- Last -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = totalPages, pageSize, q })" aria-label="Last">&raquo;&raquo;</a>
                </li>
            </ul>
        </nav>
    }
</div>
