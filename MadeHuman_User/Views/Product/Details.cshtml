@model Madehuman_Share.ViewModel.Shop.ProductDetailViewModel

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Product/product-detail.css" asp-append-version="true" />

<div class="product-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-box"></i> Chi tiết sản phẩm</h2>
            <div class="page-subtext">Thông tin & biến thể của sản phẩm</div>
        </div>
        <div class="toolbar">
            <a asp-action="Index" class="btn btn-outline">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <!-- Card thông tin -->
    <div class="info-card">
        <div class="info-grid">
            <div class="info-row">
                <div class="label">Tên sản phẩm</div>
                <div class="value fw-semibold text-break">@Model.Name</div>
            </div>

            <div class="info-row">
                <div class="label">Mô tả</div>
                <div class="value text-break">@Model.Description</div>
            </div>

            <div class="info-row">
                <div class="label">Giá</div>
                <div class="value price">@Model.Price.ToString("N0") ₫</div>
            </div>

            <div class="info-row">
                <div class="label">Mã SKU chính</div>
                <div class="value"><span class="id-chip">@Model.SKU</span></div>
            </div>

            <div class="info-row">
                <div class="label">Danh mục</div>
                <div class="value">@Model.CategoryName</div>
            </div>
        </div>
    </div>

    <!-- Biến thể -->
    @if (Model.ProductItems != null && Model.ProductItems.Any())
    {
        <div class="table-wrap mt-3">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 40%;">SKU</th>
                        <th>Số lượng tồn kho</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductItems)
                    {
                        <tr>
                            <td><span class="id-chip">@item.SKU</span></td>
                            <td class="fw-semibold">@item.QuantityInStock</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state mt-3">
            <i class="bi bi-inboxes"></i>
            <div class="title">Chưa có biến thể sản phẩm</div>
            <div class="desc">Bạn có thể thêm biến thể trong phần chỉnh sửa sản phẩm.</div>
        </div>
    }
</div>
