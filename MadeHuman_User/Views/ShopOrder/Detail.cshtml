@using System.Globalization
@using Madehuman_User.ViewModel.Shop
@model ShopOrderDetailViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    CultureInfo culture = new CultureInfo("vi-VN"); // Định dạng tiền VNĐ
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/ShopOrder/order-detail.css" asp-append-version="true" />

<div class="order-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-receipt"></i> Chi tiết đơn hàng</h2>
            <div class="page-subtext">Thông tin và các dòng sản phẩm trong đơn</div>
        </div>
        <div class="toolbar">
            <a asp-action="Index" class="btn btn-outline">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <!-- Thông tin đơn -->
    <div class="info-card">
        <div class="info-grid">
            <div class="info-row">
                <div class="label">Mã đơn hàng</div>
                <div class="value text-break">@Model.ShopOrderId</div>
            </div>
            <div class="info-row">
                <div class="label">Email khách hàng</div>
                <div class="value text-break">@Model.AppUserEmail</div>
            </div>
            <div class="info-row">
                <div class="label">Ngày đặt hàng</div>
                <div class="value">@Model.OrderDate.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="info-row">
                <div class="label">Trạng thái</div>
                <div class="value">
                    <span class="status-chip" data-status="@Model.Status">@Model.Status</span>
                </div>
            </div>
            <div class="info-row">
                <div class="label">Tổng tiền</div>
                <div class="value price">@Model.TotalAmount.ToString("C0", culture)</div>
            </div>
        </div>
    </div>

    <!-- Bảng chi tiết -->
    <div class="table-wrap mt-3">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>SKU</th>
                    <th class="text-center" style="width:120px;">Số lượng</th>
                    <th class="text-end" style="width:160px;">Đơn giá</th>
                    <th class="text-end" style="width:180px;">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    var lineTotal = item.Quantity * item.UnitPrice;
                    <tr>
                        <td><span class="id-chip">@item.ProductSKUCode</span></td>
                        <td class="text-center fw-semibold">@item.Quantity</td>
                        <td class="text-end">@item.UnitPrice.ToString("C0", culture)</td>
                        <td class="text-end fw-bold">@lineTotal.ToString("C0", culture)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // (Tuỳ chọn) Áp màu chip theo trạng thái
        (() => {
            const chips = document.querySelectorAll('.status-chip');
            chips.forEach(chip => {
                const s = (chip.dataset.status || '').toLowerCase();
                chip.classList.remove('st-pending','st-processing','st-completed','st-cancelled');
                if (s.includes('pending') || s.includes('chờ')) chip.classList.add('st-pending');
                else if (s.includes('process') || s.includes('xử lý')) chip.classList.add('st-processing');
                else if (s.includes('complete') || s.includes('hoàn thành')) chip.classList.add('st-completed');
                else if (s.includes('cancel') || s.includes('huỷ')) chip.classList.add('st-cancelled');
            });
        })();
    </script>
}
