@model Madehuman_User.ViewModel.Shop.CreateShopOrderWithMultipleItems

@{
    ViewData["Title"] = "Tạo Đơn Hàng Mới";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/ShopOrder/order-create.css" asp-append-version="true" />

<div class="order-page container mt-4">

    <!-- Header -->
    <div class="page-head mb-2">
        <div>
            <h2 class="page-title"><i class="bi bi-receipt"></i> Tạo Đơn Hàng Mới</h2>
            <div class="page-subtext">Nhập thông tin đơn và các dòng sản phẩm</div>
        </div>
        <div class="toolbar">
            <a asp-action="Index" class="btn btn-outline">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="inline-alert show success">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="inline-alert show error">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        </div>
    }

    <div class="form-card">
        <form asp-action="Create" method="post" id="orderCreateForm">
            @Html.AntiForgeryToken()

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="AppUserId" class="form-label fw-bold">App User ID</label>
                    <input asp-for="AppUserId" class="form-control" />
                    <span asp-validation-for="AppUserId" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Status" class="form-label fw-bold">Trạng thái đơn hàng</label>
                    <select asp-for="Status" class="form-select">
                        <option value="0">Created</option>
                        <option value="1">Confirmed</option>
                        <option value="2">Processing</option>
                        <option value="3">Delivery</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="OrderDate" class="form-label fw-bold">Ngày đặt hàng</label>
                    <input asp-for="OrderDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="OrderDate" class="text-danger small"></span>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between align-items-center mb-2">
                <h4 class="m-0"><i class="bi bi-box-seam"></i> Danh sách sản phẩm</h4>
                <button type="button" id="add-item" class="btn btn-outline">
                    <i class="bi bi-plus-circle"></i> Thêm sản phẩm
                </button>
            </div>

            <div id="items-container" class="table-wrap">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width:40%;">Product SKU Id</th>
                            <th style="width:20%;">Số lượng</th>
                            <th style="width:25%;">Đơn giá</th>
                            <th style="width:15%; text-align:right;">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody id="items-tbody">
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            <tr class="item-row">
                                <td>
                                    <input asp-for="Items[@i].ProductSKUsId" class="form-control" />
                                    <span asp-validation-for="Items[@i].ProductSKUsId" class="text-danger small"></span>
                                </td>
                                <td>
                                    <input asp-for="Items[@i].Quantity" class="form-control" type="number" min="1" step="1" />
                                    <span asp-validation-for="Items[@i].Quantity" class="text-danger small"></span>
                                </td>
                                <td>
                                    <input asp-for="Items[@i].UnitPrice" class="form-control" type="number" min="0" step="1000" />
                                    <span asp-validation-for="Items[@i].UnitPrice" class="text-danger small"></span>
                                </td>
                                <td class="text-end">
                                    <button type="button" class="btn btn-danger-soft remove-item">
                                        <i class="bi bi-trash"></i> Xoá
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-orange">
                    <i class="bi bi-save"></i> Tạo đơn hàng
                </button>
                <a asp-action="Index" class="btn btn-outline">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const tbody = document.getElementById('items-tbody');
            const addBtn = document.getElementById('add-item');

            addBtn.addEventListener('click', () => {
                const index = tbody.querySelectorAll('.item-row').length;
                const tr = document.createElement('tr');
                tr.className = 'item-row';
                tr.innerHTML = `
                    <td>
                        <input name="Items[${index}].ProductSKUsId" class="form-control" />
                        <span data-valmsg-for="Items[${index}].ProductSKUsId" class="text-danger small"></span>
                    </td>
                    <td>
                        <input name="Items[${index}].Quantity" class="form-control" type="number" min="1" step="1" />
                        <span data-valmsg-for="Items[${index}].Quantity" class="text-danger small"></span>
                    </td>
                    <td>
                        <input name="Items[${index}].UnitPrice" class="form-control" type="number" min="0" step="1000" />
                        <span data-valmsg-for="Items[${index}].UnitPrice" class="text-danger small"></span>
                    </td>
                    <td class="text-end">
                        <button type="button" class="btn btn-danger-soft remove-item">
                            <i class="bi bi-trash"></i> Xoá
                        </button>
                    </td>
                `;
                tbody.appendChild(tr);
            });

            document.addEventListener('click', (e) => {
                if (e.target.closest('.remove-item')) {
                    const row = e.target.closest('.item-row');
                    row?.remove();
                    reindexRows();
                }
            });

            function reindexRows() {
                const rows = tbody.querySelectorAll('.item-row');
                rows.forEach((row, i) => {
                    row.querySelectorAll('input').forEach(inp => {
                        // name="Items[old].Field" -> name="Items[i].Field"
                        const name = inp.getAttribute('name');
                        if (!name) return;
                        const newName = name.replace(/Items\[\d+\]/, `Items[${i}]`);
                        inp.setAttribute('name', newName);
                        // reset validation span mapping if present
                        const parent = inp.parentElement;
                        const span = parent.querySelector('[data-valmsg-for]');
                        if (span) span.setAttribute('data-valmsg-for', newName);
                    });
                });
            }
        })();
    </script>
}
