@model List<Madehuman_User.ViewModel.Shop.ShopOrderListItemViewModel>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var q = (string)(ViewBag.Q ?? "");
    var status = (string)(ViewBag.Status ?? "");
    var statuses = ViewBag.Statuses as List<string> ?? new List<string>();

    var totalItems = (int)(ViewBag.TotalItems ?? 0);
    var fromItem = (int)(ViewBag.FromItem ?? 0);
    var toItem = (int)(ViewBag.ToItem ?? 0);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/ShopOrder/order-index.css" asp-append-version="true" />

<div class="order-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-receipt"></i> Danh sách đơn hàng</h2>
            <div class="page-subtext">Theo dõi đơn và xem chi tiết</div>
        </div>
        <div class="toolbar">
            <a asp-controller="ShopOrder" asp-action="Create" class="btn btn-orange">
                <i class="bi bi-plus-circle"></i> Thêm đơn hàng
            </a>
        </div>
    </div>

    <!-- Bộ lọc -->
    <form method="get" class="d-flex flex-wrap gap-2 align-items-end mb-3">
        <div class="with-icon" style="min-width:280px">
            <i class="bi bi-search"></i>
            <input name="q" value="@q" class="form-control" placeholder="Tìm theo tên KH, trạng thái, mã đơn..." />
        </div>

        <div>
            <label class="form-label mb-1">Trạng thái</label>
            <select name="status" class="form-select">
                <option value="">— Tất cả —</option>
                @foreach (var s in statuses)
                {
                    <option value="@s" selected="@(string.Equals(s, status, StringComparison.OrdinalIgnoreCase))">@s</option>
                }
            </select>
        </div>

        <button class="btn btn-outline" type="submit">
            <i class="bi bi-funnel"></i> Lọc
        </button>
    </form>

    <!-- Summary -->
    <div class="small text-muted mb-2">
        Đang hiển thị <b>@fromItem–@toItem</b> / <b>@totalItems</b> đơn hàng.
    </div>

    <!-- Bảng -->
    <div class="table-wrap">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Người đặt</th>
                    <th style="width: 140px;">Ngày đặt</th>
                    <th style="width: 160px;">Trạng thái</th>
                    <th style="width: 160px;">Tổng tiền</th>
                    <th style="width: 100px;" class="text-center">Số SP</th>
                    <th style="width: 120px; text-align:right;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="6">
                            <div class="empty-state">
                                <i class="bi bi-inboxes"></i>
                                <div class="title">Chưa có đơn hàng</div>
                                <div class="desc">Hãy tạo đơn hàng đầu tiên của bạn.</div>
                                <a asp-controller="ShopOrder" asp-action="Create" class="btn btn-orange">
                                    <i class="bi bi-plus-circle"></i> Thêm đơn hàng
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var order in Model)
                    {
                        <tr>
                            <td class="text-break">@order.AppUserName</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                            <td><span class="status-chip">@order.Status</span></td>
                            <td class="price">@order.TotalAmount.ToString("N0") ₫</td>
                            <td class="text-center fw-bold">@order.ItemCount</td>
                            <td class="text-end">
                                <div class="action-group">
                                    <a asp-controller="ShopOrder" asp-action="Detail" asp-route-id="@order.ShopOrderId"
                                       class="btn btn-sm btn-outline" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        var window = 2;
        var start = Math.Max(1, currentPage - window);
        var end = Math.Min(totalPages, currentPage + window);

        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination justify-content-center flex-wrap mb-0">
                <!-- First -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = 1, pageSize, q, status })" aria-label="First">&laquo;&laquo;</a>
                </li>
                <!-- Prev -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, pageSize, q, status })" aria-label="Previous">&laquo;</a>
                </li>

                <!-- leading ... -->
                @if (start > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = 1, pageSize, q, status })">1</a>
                    </li>
                    @if (start > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                }

                <!-- window pages -->
                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize, q, status })">@i</a>
                    </li>
                }

                <!-- trailing ... -->
                @if (end < totalPages)
                {
                    @if (end < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = totalPages, pageSize, q, status })">@totalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, pageSize, q, status })" aria-label="Next">&raquo;</a>
                </li>
                <!-- Last -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = totalPages, pageSize, q, status })" aria-label="Last">&raquo;&raquo;</a>
                </li>
            </ul>
        </nav>
    }
</div>
