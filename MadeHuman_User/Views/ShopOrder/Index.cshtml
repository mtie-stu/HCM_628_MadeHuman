@model List<Madehuman_Share.ViewModel.Shop.ShopOrderListItemViewModel>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<h2>Danh sách đơn hàng</h2>

<div class="mb-3 text-end">
    <a asp-controller="ShopOrder" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm đơn hàng
    </a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-warning">Chưa có đơn hàng nào.</div>
}
else
{
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-light text-center">
            <tr>
                <th>Người đặt</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th>Tổng tiền</th>
                <th>Số SP</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.AppUserName</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.Status</td>
                    <td>@order.TotalAmount.ToString("N0") ₫</td>
                    <td class="text-center">@order.ItemCount</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="ShopOrder" asp-action="Detail" asp-route-id="@order.ShopOrderId"
                               class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-controller="ShopOrder" asp-action="Edit" asp-route-id="@order.ShopOrderId"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            @* <a asp-controller="ShopOrder" asp-action="Delete" asp-route-id="@order.ShopOrderId"
                               class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc muốn xóa đơn này?');">
                                <i class="bi bi-trash"></i>
                            </a> *@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
