@model Madehuman_User.ViewModel.WareHouse.WareHouseZoneViewModel

@{
    ViewData["Title"] = "Tạo khu mới";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Id">ID Khu</label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Tên khu</label>
        <select asp-for="Name" asp-items="ViewBag.Warehouses" class="form-control">
            <option value="">-- Chọn kho --</option>
        </select>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WarehouseId">ID kho hàng</label>
        <textarea asp-for="WarehouseId" class="form-control"></textarea>
        <span asp-validation-for="WarehouseId" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-success">💾 Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
