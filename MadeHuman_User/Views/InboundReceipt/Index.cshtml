@model IEnumerable<Madehuman_Share.ViewModel.Inbound.InboundReceipt.InboundReceiptViewModel>

@{
    ViewData["Title"] = "Inbound Receipts";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/InboundReceipt/inbound-receipt-index.css" asp-append-version="true" />

<div class="inbound-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-box-arrow-in-down"></i> Danh sách Phiếu Nhập</h2>
            <div class="page-subtext">Theo dõi phiếu nhập và trạng thái nhiệm vụ</div>
        </div>

        <div class="toolbar">
            <form method="get" asp-action="Index" class="filter-row">
                <div class="with-icon">
                    <i class="bi bi-search"></i>
                    <input name="searchTerm" value="@searchTerm" class="form-control" placeholder="Tìm theo mã phiếu, task..." />
                </div>
                <button class="btn btn-outline" type="submit"><i class="bi bi-funnel"></i> Lọc</button>
                <a asp-controller="InboundReceipt" asp-action="Create" class="btn btn-orange">
                    <i class="bi bi-plus-circle"></i> Tạo phiếu mới
                </a>
            </form>
        </div>
    </div>

    <!-- Bảng -->
    <div class="table-wrap">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width: 220px;">Mã phiếu</th>
                    <th style="width: 180px;">Ngày tạo</th>
                    <th style="width: 160px;">Ngày nhận</th>
                    <th style="width: 160px;">Trạng thái</th>
                    <th style="width: 200px;">Mã nhiệm vụ</th>
                    <th style="width: 200px;">Trạng thái nhiệm vụ</th>
                    <th style="width: 110px;">Số dòng</th>
                    <th style="width: 140px; text-align:right;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="8">
                            <div class="empty-state">
                                <i class="bi bi-inboxes"></i>
                                <div class="title">Chưa có phiếu nhập</div>
                                <div class="desc">Hãy tạo phiếu nhập đầu tiên của bạn.</div>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <!-- Rút gọn + copy -->
                            <td><span class="id-chip" title="Bấm để copy ID đầy đủ">@item.Id</span></td>

                            <td>@item.CreateAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(item.ReceivedAt == DateTime.MinValue ? "-" : item.ReceivedAt.ToString("dd/MM/yyyy"))</td>
                            <td><span class="status-chip">@item.Status</span></td>

                            <!-- Rút gọn + copy cho mã nhiệm vụ (nếu là mã/ID) -->
                            <td class="text-break">
                                @if (!string.IsNullOrWhiteSpace(item.TaskCode))
                                {
                                    <span class="id-chip" title="Bấm để copy ID đầy đủ">@item.TaskCode</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>

                            <td><span class="status-chip weak">@item.TaskStatus</span></td>
                            <td class="fw-bold">@item.ItemCount</td>
                            <td class="text-end">
                                <a asp-controller="InboundReceipt" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        var window = 2; // số trang hiển thị hai bên trang hiện tại
        var start = Math.Max(1, currentPage - window);
        var end = Math.Min(totalPages, currentPage + window);

        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center flex-wrap mb-0">
                <!-- First -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = 1, searchTerm })" aria-label="First">&laquo;&laquo;</a>
                </li>
                <!-- Prev -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, searchTerm })" aria-label="Previous">&laquo;</a>
                </li>

                <!-- leading ... -->
                @if (start > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = 1, searchTerm })">1</a>
                    </li>
                    @if (start > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                }

                <!-- window -->
                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, searchTerm })">@i</a>
                    </li>
                }

                <!-- trailing ... -->
                @if (end < totalPages)
                {
                    @if (end < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = totalPages, searchTerm })">@totalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, searchTerm })" aria-label="Next">&raquo;</a>
                </li>
                <!-- Last -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = totalPages, searchTerm })" aria-label="Last">&raquo;&raquo;</a>
                </li>
            </ul>
        </nav>
    }

    <!-- Inline alert -->
    <div id="inlineAlert" class="inline-alert d-none"></div>
</div>

@section Scripts {
<script>
(function(){
  const toast = document.getElementById('inlineAlert');

  // mini toast
  function showToast(type, text){
    if (!toast) return;
    toast.className = 'inline-alert ' + (type==='success'?'success':'error');
    toast.textContent = text;
    toast.classList.remove('d-none');
    requestAnimationFrame(()=> toast.classList.add('show'));
    setTimeout(()=>{ toast.classList.remove('show'); setTimeout(()=> toast.classList.add('d-none'), 160); }, 1800);
  }

  // Rút gọn & gắn copy cho mọi .id-chip
  function shortenId(str){
    if (!str) return str;
    const s = String(str).trim();
    // GUID/chuỗi dài: ưu tiên 8...8 nếu >= 32 ký tự; còn lại 4...4 nếu > 8
    if (s.length >= 32) return s.slice(0,8) + '...' + s.slice(-8);
    if (s.length > 8)  return s.slice(0,4) + '...' + s.slice(-4);
    return s;
  }
  function enhanceIdChips(root=document){
    root.querySelectorAll('.id-chip').forEach(chip=>{
      const full = (chip.getAttribute('data-guid') || chip.textContent || '').trim();
      if (!full) return;
      chip.setAttribute('data-guid', full);       // lưu full để copy
      chip.textContent = shortenId(full);         // hiển thị rút gọn
      chip.title = chip.title || 'Bấm để copy ID đầy đủ';
      chip.classList.add('copy-guid');
      chip.style.cursor = 'pointer';
    });
  }

  // Click-to-copy
  document.addEventListener('click', function(e){
    const el = e.target.closest('.copy-guid');
    if (!el) return;

    e.preventDefault();    // tránh select text ngẫu nhiên
    e.stopPropagation();   // nếu đặt trong button/accordion thì không toggle

    const full = el.getAttribute('data-guid');
    if (!full) return;

    if (navigator.clipboard?.writeText) {
      navigator.clipboard.writeText(full)
        .then(()=> showToast('success','✅ Đã copy đầy đủ mã'))
        .catch(()=> showToast('error','❌ Không thể copy.'));
    } else {
      // Fallback
      const ta = document.createElement('textarea');
      ta.value = full;
      ta.style.position = 'fixed';
      ta.style.opacity = '0';
      document.body.appendChild(ta);
      ta.select();
      try {
        document.execCommand('copy');
        showToast('success','✅ Đã copy đầy đủ mã');
      } catch {
        showToast('error','❌ Không thể copy.');
      } finally {
        document.body.removeChild(ta);
      }
    }
  });

  // Khởi tạo
  enhanceIdChips();
})();
</script>
}
