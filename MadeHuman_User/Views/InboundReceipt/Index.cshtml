@model IEnumerable<Madehuman_Share.ViewModel.Inbound.InboundReceipt.InboundReceiptViewModel>

@{
    ViewData["Title"] = "Inbound Receipts";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Danh sách Phiếu Nhập</h2>
    <a asp-controller="InboundReceipt" asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Tạo phiếu mới
    </a>
</div>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Mã phiếu</th>
            <th>Ngày tạo</th>
            <th>Ngày nhận</th>
            <th>Trạng thái</th>
            <th>Mã nhiệm vụ</th>
            <th>Trạng thái nhiệm vụ</th>
            <th>Số dòng</th>
            <th class="text-center" style="width: 120px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CreateAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.ReceivedAt.ToString("dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>@item.TaskCode</td>
                <td>@item.TaskStatus</td>
                <td>@item.ItemCount</td>
                <td class="text-center">
                    <a asp-controller="InboundReceipt" asp-action="Detail" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i> Chi tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, searchTerm = searchTerm })">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Previous</span></li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, searchTerm = searchTerm })">@i</a>
                </li>
            }

            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, searchTerm = searchTerm })">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Next</span></li>
            }
        </ul>
    </nav>
}
