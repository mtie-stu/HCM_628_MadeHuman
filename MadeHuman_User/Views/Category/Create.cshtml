@model Madehuman_User.ViewModel.Shop.CreateCategoryViewModel

@{
    ViewData["Title"] = "Thêm danh mục";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Category/category-create.css" asp-append-version="true" />

<div class="category-page container mt-4">

    <!-- Header -->
    <div class="page-head mb-3">
        <div>
            <h2 class="page-title"><i class="bi bi-plus-circle"></i> Thêm danh mục</h2>
            <div class="page-subtext">Tạo danh mục sản phẩm mới</div>
        </div>
    </div>

    <div class="form-card">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-orange">
                    <i class="bi bi-check2-circle"></i> Thêm mới
                </button>
                <a asp-action="Index" class="btn btn-outline">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
