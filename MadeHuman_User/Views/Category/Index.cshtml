@model List<Madehuman_User.ViewModel.Shop.CreateCategoryViewModel>

@{
    ViewData["Title"] = "Danh sách danh mục";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/pages/Category/category-index.css" asp-append-version="true" />

<div class="category-page container mt-4">

    <!-- Header -->
    <div class="page-head">
        <div>
            <h2 class="page-title"><i class="bi bi-tags"></i> Danh sách danh mục</h2>
            <div class="page-subtext">Quản lý & chỉnh sửa danh mục sản phẩm</div>
        </div>

        <div class="toolbar">
            <a class="btn btn-orange" href="@Url.Action("Create")">
                <i class="bi bi-plus-circle"></i> Thêm danh mục
            </a>
        </div>
    </div>

    <!-- Thông báo (TempData) -->
    @if (TempData["Success"] != null)
    {
        <div class="inline-alert show success">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="inline-alert show error">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        </div>
    }

    <!-- Bảng -->
    <div class="table-wrap">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th style="width: 28%;">Tên</th>
                    <th>Mô tả</th>
                    <th style="width: 180px; text-align:right;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="3">
                            <div class="empty-state">
                                <i class="bi bi-inboxes"></i>
                                <div class="title">Chưa có danh mục</div>
                                <div class="desc">Hãy tạo danh mục đầu tiên của bạn.</div>
                                <a class="btn btn-orange" href="@Url.Action("Create")">
                                    <i class="bi bi-plus-circle"></i> Thêm danh mục
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="id-chip">@item.Name</span>
                            </td>
                            <td>@item.Description</td>
                            <td class="text-end">
                                <div class="action-group">
                                    <a class="btn btn-sm btn-outline" href="@Url.Action("Edit", new { id = item.CategoryId })">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        var window = 2;                          // số trang hai bên trang hiện tại
        var start = Math.Max(1, currentPage - window);
        var end = Math.Min(totalPages, currentPage + window);

        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination justify-content-center flex-wrap mb-0">
                <!-- First -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = 1 })" aria-label="First">&laquo;&laquo;</a>
                </li>
                <!-- Prev -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })" aria-label="Previous">&laquo;</a>
                </li>

                <!-- leading ... -->
                @if (start > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = 1 })">1</a>
                    </li>
                    @if (start > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                }

                <!-- window pages -->
                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                <!-- trailing ... -->
                @if (end < totalPages)
                {
                    @if (end < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">…</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = totalPages })">@totalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })" aria-label="Next">&raquo;</a>
                </li>
                <!-- Last -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = totalPages })" aria-label="Last">&raquo;&raquo;</a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        function confirmDelete(form) {
            return confirm("Bạn có chắc muốn xoá danh mục này?");
        }
    </script>
}
