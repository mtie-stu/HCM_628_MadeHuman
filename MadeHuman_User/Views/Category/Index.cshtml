@model List<Madehuman_User.ViewModel.Shop.CreateCategoryViewModel>

<h2>Danh sách danh mục</h2>
<a class="btn btn-primary mb-2" href="@Url.Action("Create")">Thêm danh mục</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Mô tả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = item.CategoryId })">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
