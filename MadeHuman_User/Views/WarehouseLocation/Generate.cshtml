@model Madehuman_Share.ViewModel.WareHouse.GenerateWHLocationRequest

@{
    
}

<h2>@ViewData["Title"]Tạo Vị Trí Kho</h2>

<form asp-action="Generate" method="post">
    <div class="form-group">
        <label asp-for="ZoneId" class="control-label">Zone</label>
        <select asp-for="ZoneId" class="form-control" asp-items="ViewBag.ZoneList">
            <option value="">-- Chọn Zone --</option>
        </select>
        <span asp-validation-for="ZoneId" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="StartLetter">Bắt đầu từ khu vực</label>
            <input asp-for="StartLetter" class="form-control" maxlength="1" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="EndLetter">Kết thúc từ khu vực</label>
            <input asp-for="EndLetter" class="form-control" maxlength="1" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="StartNumber">Bắt đầu từ số</label>
            <input asp-for="StartNumber" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="EndNumber">Kết thúc từ số</label>
            <input asp-for="EndNumber" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="StartSub">Bắt đầu từ số tầng </label>
            <input asp-for="StartSub" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="EndSub">Kết thúc số tầng nào</label>
            <input asp-for="EndSub" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Quantity">Số lượng cần tạo</label>
            <input asp-for="Quantity" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Tạo Danh Sách Vị Trí</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
