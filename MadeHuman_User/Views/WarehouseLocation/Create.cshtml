@model Madehuman_Share.ViewModel.WareHouse.WarehouseLocationViewModel

@{
   
}

<h2>@ViewData["Title"]Tạo vị trí mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NameLocation">Vị Trí</label>
        <select asp-for="NameLocation" asp-items="ViewBag.WarehouseZones" class="form-control">
            <option value="">-- Vị Trí --</option>
        </select>
        <span asp-validation-for="NameLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ZoneId">ID Khu Vực</label>
        <textarea asp-for="ZoneId" class="form-control"></textarea>
        <span asp-validation-for="ZoneId" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-success">💾 Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
